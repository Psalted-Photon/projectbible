{
  "name": "projectbible",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "adm-zip": "^0.5.16",
    "concurrently": "^9.1.0",
    "wait-on": "^8.0.1",
    "xml2js": "^0.6.2"
  },
  "scripts": {
    "dev:pwa": "npm -w apps/pwa run dev",
    "dev:polished": "npm -w apps/pwa-polished run dev",
    "dev:all": "concurrently -n CLASSIC,POLISHED -c green,blue \"npm run dev:pwa\" \"npm run dev:polished\"",
    "dev:electron": "npm -w apps/electron run dev",
    "dev": "concurrently -n PWA,ELECTRON -c green,cyan \"npm run dev:pwa\" \"wait-on http://127.0.0.1:5173; npm run dev:electron\"",
    "build:pwa": "npm -w apps/pwa run build",
    "build:polished": "npm -w apps/pwa-polished run build",
    "packs:list": "powershell -ExecutionPolicy Bypass -File manage-packs.ps1 list",
    "packs:promote": "powershell -ExecutionPolicy Bypass -File manage-packs.ps1 promote",
    "packs:demote": "powershell -ExecutionPolicy Bypass -File manage-packs.ps1 demote",
    "packs:clean": "powershell -ExecutionPolicy Bypass -File manage-packs.ps1 clean",
    "build:all-packs": "node scripts/build-all-packs.mjs",
    "build:greek": "node scripts/build-greek-pack.mjs",
    "build:hebrew": "node scripts/build-hebrew-pack.mjs",
    "build:web": "node scripts/build-web-pack.mjs",
    "build:kjv": "node scripts/build-kjv-pack.mjs",
    "build:places": "node scripts/build-places-pack.mjs",
    "build:maps": "node scripts/build-map-pack.mjs",
    "build:cross-refs": "node scripts/build-cross-references.mjs",
    "build:samples": "powershell -ExecutionPolicy Bypass -File scripts/build-sample-packs.ps1",
    "test:packs": "node scripts/test-pack-read.mjs",
    "verify-pack": "node scripts/verify-pack.mjs",
    "lint": "npm -ws run lint",
    "typecheck": "npm -ws run typecheck",
    "test": "npm -ws run test",
    "packtools": "\"C:\\Program Files\\PowerShell\\7\\pwsh.exe\" -File scripts/packtools.ps1"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.3",
    "JSONStream": "^1.3.5"
  },
  "optionalDependencies": {
    "@esbuild/linux-x64": "^0.27.2",
    "@esbuild/win32-x64": "^0.27.2",
    "@rollup/rollup-linux-x64-gnu": "^4.28.1",
    "@rollup/rollup-win32-x64-msvc": "^4.28.1"
  }
}
